<!DOCTYPE html>

<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plant Tracker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Pacifico&display=swap" rel="stylesheet">
</head>

<body>
    <div class="navbar">
        <h1 id="logo">Plant Tracker</h1>
        <ul class="navlinks">
            <li><a href="/pages/dashboard.html">Dashboard</a></li>
            <li><a href="index.ejs">My Plants</a></li>
            <li><a href="/pages/settings.html">Settings</a></li>
            <li><a href="/pages/wishlist.html">Wishlist</a></li>
        </ul>
    </div>

    <div id="card_grid">
        <% plants.forEach(plant => { %>
            <a href="/plants/<%= plant.id %>" class="plant_card_link">
                <div class="plant_card">
                    <img class="plant_img" src="<%= plant.image_url %>" alt="<%= plant.name %>">
                    <h3><%= plant.name %></h3>
                    <p><%= plant.species %> <br> Last Watered: <%= plant.last_watered %> <br> Purchased on: <%= plant.purchase_date %></p>
                </div>
            </a>
        <% }); %>
    

        <button id="add_card">
            <i class="fa-solid fa-plus plus-icon"></i>
            <h2>Add New Plant</h2>
        </button>
    </div>

    <div id="form_modal_overlay">
            <div class="modal_content">
                <span id="close_modal_btn">&times;</span>
                <h2 class="form_title">Add a New Plant</h2>
                <form action="/plants" method="POST">
                    <div class="form_group">
                        <label for="plant_name" class="form_label">Plant Name</label>
                        <input type="text" id="plant_name" name="name" class="form_input" required>
                    </div>
                    <div class="form_group">
                        <label for="plant_species" class="form_label">Plant Species</label>
                        <input type="text" id="plant_species" name="species" class="form_input" required>
                    </div>
                    <div class="form_group">
                        <label for="last_watered" class="form_label">Last Watered</label>
                        <input type="date" id="last_watered" name="lastWatered" class="form_input">
                    </div>
                    <div class="form_group">
                        <label for="purchase-date" class="form_label">Date of Purchase</label>
                        <input type="date" id="purchase_date" name="purchaseDate" class="form_input">
                    </div>
                    <div class="form_group">
                        <label for="image_url" class="form_label">Image URL</label>
                        <input type="text" id="image_url" name="imageUrl" class="form_input" placeholder="Add your image url here...">
                    </div>
                    <button type="submit" class="form_button">
                        Add Plant
                    </button>
                </form>
            </div>
        </div>

<script src="/scripts/myplants.js"></script>
</body>
</html>
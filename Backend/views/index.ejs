<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plant Tracker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <div class="navbar">
        <h1 class="logo">Plant Tracker</h1>
        <ul class="navlinks">
            <li><a href="/pages/dashboard.html">Dashboard</a></li>
            <li><a href="index.ejs">My Plants</a></li>
            <li><a href="/pages/settings.html">Settings</a></li>
            <li><a href="/pages/wishlist.html">Wishlist</a></li>
        </ul>
    </div>

    <div id="card_grid">
        <% plants.forEach(plant => { %>
            <a href="/plants/<%= plant.id %>" class="plant_card_link">
                <div class="plant_card">
                    <img class="plant_img" src="<%= plant.image_url %>" alt="<%= plant.name %>">
                    <h3><%= plant.name %></h3>
                    <p><%= plant.species %> <br> Last Watered: <%= plant.last_watered %> <br> Purchased on: <%= plant.purchase_date %></p>
                </div>
            </a>
        <% }); %>

        <div id="add_card">
            <i class="fa-solid fa-plus plus-icon"></i>
            <h2>Add New Plant</h2>
        </div>
    </div>

    <div id="form-modal-overlay" class="modal-overlay">
            <div class="modal-content">
                <span id="close-modal-btn" class="close-btn">&times;</span>
                <h2 class="form-title">Add a New Plant</h2>
                <form action="/plants" method="POST">
                    <div class="form-group">
                        <label for="plant-name" class="form-label">Plant Name</label>
                        <input type="text" id="plant-name" name="name" class="form-input" required>
                    </div>
                    <div class="form-group">
                        <label for="plant-species" class="form-label">Plant Species</label>
                        <input type="text" id="plant-species" name="species" class="form-input" required>
                    </div>
                    <div class="form-group">
                        <label for="last-watered" class="form-label">Last Watered</label>
                        <input type="date" id="last-watered" name="lastWatered" class="form-input">
                    </div>
                    <div class="form-group">
                        <label for="purchase-date" class="form-label">Date of Purchase</label>
                        <input type="date" id="purchase-date" name="purchaseDate" class="form-input">
                    </div>
                    <div class="form-group">
                        <label for="image-url" class="form-label">Image URL</label>
                        <input type="text" id="image-url" name="imageUrl" class="form-input" placeholder="Add your image url here...">
                    </div>
                    <button type="submit" class="form-button">
                        Add Plant
                    </button>
                </form>
            </div>
        </div>

<script src="/scripts/myplants.js"></script>
</body>
</html>